<div class="card p-4">
  <i class="fas fa-arrow-left text-left randomeal-secondary"></i>
  <%= simple_form_for @user do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :photo, as: :file, class: 'text-center' %>
    <%= f.button :submit, 'Save', class: 'btn btn-lg mt-3 mb-2 back-btn' %>
  <% end %>
  <div class="d-flex justify-content-center">
    <%= link_to "back", user_path(@user), class: "btn btn-sm custom-btn-secondary" %>
  </div>

</div>

<div class="card p-4">
  <div class="text-left">
    <%= link_to "<i class='fas fa-arrow-left text-left randomeal-secondary'></i>".html_safe, user_path(@user)%>
  </div>
  <%= simple_form_for @user do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :photo, as: :file, class: 'text-center' %>
    <%= f.button :submit, 'Save', class: 'btn btn-lg mt-3 mb-2 back-btn' %>
  <% end %>
</div>

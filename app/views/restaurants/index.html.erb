<%= link_to "Go back", root_path, class: "btn btn-outline-secondary mb-2 text-left" %>

<% restaurant = @restaurants.sample %>

<div class="card" >
  <!-- <img src="..." class="card-img-top" alt="..."> -->
  <div class="card-body">
    <h5 class="card-title"><%= restaurant.name %></h5>
    <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Type of Food: <%= restaurant.category.name %></li>
    <li class="list-group-item">
      Availability:
      <% restaurant.timings.split(",").each do |time| %>
        <%= time %> <br>
      <% end %>
    </li>
    <% price = "" %>
    <% restaurant.price_range.to_i.times do %>
      <% price += "$ " %>
    <% end %>
    <li class="list-group-item">Price Range: <%= price %></li>
  </ul>
  <div class="card-body">
    <%= link_to "Go to Maps", "https://www.google.com/maps/place/#{restaurant.address}", target: "_blank" %>
  </div>
</div>
<%= link_to "Randomize", restaurants_path, class: "btn btn-lg mt-3", id: "randomize-btn" %>
